<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/openSourceProjectTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:gravity="start|center_horizontal"
        android:text="Course Name"
        android:textColor="@color/colorPrimaryComplete4"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/openSourceProjectDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:text="Message Date"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="5dp"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:gravity="end|center_horizontal"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/tag_icon" />

        <TextView
            android:id="@+id/openSourceProjectTags"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:gravity="start|center_horizontal"
            android:layout_weight="4"
            android:text="Course Uni"
            android:textColor="@color/colorPrimaryComplete"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="2dp"
        android:backgroundTint="@color/white"
        android:background="?android:attr/listDivider"
        android:visibility="visible" />
</LinearLayout>